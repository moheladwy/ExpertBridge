{
  "$schema": "https://json.schemastore.org/aspire-8.0.json",
  "resources": {
    "Redis": {
      "type": "container.v0",
      "connectionString": "{Redis.bindings.tcp.host}:{Redis.bindings.tcp.port},password={Redis-password.value}",
      "image": "docker.io/redis:alpine",
      "entrypoint": "/bin/sh",
      "args": [
        "-c",
        "redis-server --requirepass $REDIS_PASSWORD --save 300 1"
      ],
      "volumes": [
        {
          "name": "expertbridge-redis-data",
          "target": "/data",
          "readOnly": false
        }
      ],
      "env": {
        "REDIS_PASSWORD": "expertbridge_redis_password"
      },
      "bindings": {
        "tcp": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "targetPort": 6379
        }
      }
    },
    "Seq": {
      "type": "container.v0",
      "connectionString": "{Seq.bindings.http.url}",
      "image": "docker.io/datalust/seq:2024.3",
      "volumes": [
        {
          "name": "expertbridge-seq-data",
          "target": "/data",
          "readOnly": false
        }
      ],
      "env": {
        "ACCEPT_EULA": "Y"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "port": 4002,
          "targetPort": 80,
          "external": true
        }
      }
    },
    "ExpertBridgeApi": {
      "type": "project.v0",
      "path": "../ExpertBridge.Api/ExpertBridge.Api.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "HTTP_PORTS": "{ExpertBridgeApi.bindings.http.targetPort}",
        "ConnectionStrings__Redis": "{Redis.connectionString}",
        "ConnectionStrings__Seq": "{Seq.connectionString}"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "external": true
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http",
          "external": true
        }
      }
    },
    "ExpertBridgeAdmin": {
      "type": "project.v0",
      "path": "../ExpertBridge.Admin/ExpertBridge.Admin.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "HTTP_PORTS": "{ExpertBridgeAdmin.bindings.http.targetPort}",
        "ConnectionStrings__Seq": "{Seq.connectionString}"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "external": true
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http",
          "external": true
        }
      }
    }
  }
}