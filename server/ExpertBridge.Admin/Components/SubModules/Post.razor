@namespace ExpertBridge.Admin.Components.SubModules

<div class="rounded-lg border border-gray-200 bg-white shadow-sm overflow-hidden">
    @if (PostResponse != null)
    {
        <div class="p-5">
            <div class="flex items-center gap-3 mb-4">
                @if (PostResponse.Author?.ProfilePictureUrl != null)
                {
                    <img src="@PostResponse.Author.ProfilePictureUrl" alt="@PostResponse.Author.FirstName's profile"
                         class="w-10 h-10 rounded-full object-cover"/>
                }
                else
                {
                    <div class="w-10 h-10 rounded-full bg-gray-200 flex items-center justify-center text-gray-600">
                        @(PostResponse.Author != null ? PostResponse.Author.FirstName[0].ToString().ToUpper() : "?")
                    </div>
                }
                <div>
                    @if (PostResponse.Author != null)
                    {
                        <p class="font-medium text-gray-900">
                            @PostResponse.Author.FirstName @PostResponse.Author.LastName
                            @if (!string.IsNullOrEmpty(PostResponse.Author.Username))
                            {
                                <span class="text-gray-500">@("@" + PostResponse.Author.Username)</span>
                            }
                        </p>
                        @if (!string.IsNullOrEmpty(PostResponse.Author.JobTitle))
                        {
                            <p class="text-sm text-gray-500">@PostResponse.Author.JobTitle</p>
                        }
                    }
                    else
                    {
                        <p class="font-medium text-gray-900">Anonymous</p>
                    }
                </div>
                <span class="ml-auto text-sm text-gray-500">
                    @PostResponse.CreatedAt.ToString("MMM dd, yyyy â€¢ h:mm tt")
                </span>
            </div>

            <h2 class="text-xl font-bold text-gray-900 mb-2">@PostResponse.Title</h2>
            <p class="text-gray-700 mb-4">@PostResponse.Content</p>

            @if (PostResponse.Medias != null && PostResponse.Medias.Any())
            {
                <div class="grid @(PostResponse.Medias.Count == 1 ? "" : "grid-cols-2") gap-2 mb-4">
                    @foreach (var media in PostResponse.Medias)
                    {
                        @if (media.Type.StartsWith("image"))
                        {
                            <img src="@media.Url" alt="@media.Name" class="rounded-lg w-full h-auto object-cover" />
                        }
                        else if (media.Type.StartsWith("video"))
                        {
                            <video src="@media.Url" controls class="rounded-lg w-full">
                                Your browser does not support the video tag.
                            </video>
                        }
                        else
                        {
                            <div class="flex items-center gap-2 p-3 rounded-lg border border-gray-200">
                                <svg class="w-6 h-6 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                </svg>
                                <a href="@media.Url" target="_blank" class="text-blue-600 hover:underline">@media.Name</a>
                            </div>
                        }
                    }
                </div>
            }

            <div class="flex items-center gap-4 pt-3 border-t border-gray-100">
                <button class="flex items-center gap-1 @(PostResponse.IsUpvoted ? "text-blue-600" : "text-gray-500") hover:text-blue-600">
                    <svg class="w-5 h-5" fill="@(PostResponse.IsUpvoted ? "currentColor" : "none")" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7"></path>
                    </svg>
                    <span>@PostResponse.Upvotes</span>
                </button>

                <button class="flex items-center gap-1 @(PostResponse.IsDownvoted ? "text-red-600" : "text-gray-500") hover:text-red-600">
                    <svg class="w-5 h-5" fill="@(PostResponse.IsDownvoted ? "currentColor" : "none")" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                    </svg>
                    <span>@PostResponse.Downvotes</span>
                </button>

                <button class="flex items-center gap-1 text-gray-500 hover:text-gray-700">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                    </svg>
                    <span>@PostResponse.Comments</span>
                </button>
            </div>
        </div>
    }
    else
    {
        <div class="p-5">
            <div class="animate-pulse flex flex-col gap-4">
                <div class="flex items-center gap-3">
                    <div class="bg-gray-200 rounded-full h-10 w-10"></div>
                    <div class="flex-1">
                        <div class="h-4 bg-gray-200 rounded w-1/4"></div>
                        <div class="h-3 bg-gray-200 rounded w-1/6 mt-2"></div>
                    </div>
                </div>
                <div class="h-6 bg-gray-200 rounded w-3/4"></div>
                <div class="h-20 bg-gray-200 rounded"></div>
                <div class="h-40 bg-gray-200 rounded"></div>
                <div class="flex gap-4">
                    <div class="h-5 bg-gray-200 rounded w-16"></div>
                    <div class="h-5 bg-gray-200 rounded w-16"></div>
                    <div class="h-5 bg-gray-200 rounded w-16"></div>
                </div>
            </div>
        </div>
    }
</div>
