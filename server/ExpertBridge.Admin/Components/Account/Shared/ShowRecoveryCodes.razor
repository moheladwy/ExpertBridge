<StatusMessage Message="@StatusMessage"/>

<RadzenStack Gap="1rem">
    <RadzenText TextStyle="TextStyle.H3" TagName="TagName.H3">Recovery codes</RadzenText>

    <RadzenAlert AlertStyle="AlertStyle.Warning" Variant="Variant.Flat" Shade="Shade.Lighter">
        <RadzenStack Gap="0.5rem">
            <RadzenText TextStyle="TextStyle.Body1">
                <strong>Put these codes in a safe place.</strong>
            </RadzenText>
            <RadzenText TextStyle="TextStyle.Body2">
                If you lose your device and don't have the recovery codes you will lose access to your account.
            </RadzenText>
        </RadzenStack>
    </RadzenAlert>

    <RadzenCard>
        <RadzenStack Gap="0.5rem">
            @foreach (var recoveryCode in RecoveryCodes)
            {
                <RadzenText TextStyle="TextStyle.Body1">
                    <code
                        style="background-color: var(--rz-base-200); padding: 0.25rem 0.5rem; border-radius: 4px; font-family: monospace;">@recoveryCode</code>
                </RadzenText>
            }
        </RadzenStack>
    </RadzenCard>
</RadzenStack>

@code {
    [Parameter] public string[] RecoveryCodes { get; set; } = [];

    [Parameter] public string? StatusMessage { get; set; }
}
