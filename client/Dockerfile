# Building the client side of the application.
FROM node:22-alpine as build
WORKDIR /client
COPY package*.json .
RUN npm install
COPY . .

ARG VITE_SERVER_URL
ARG VITE_INDEXED_DB_VERSION
ARG VITE_API_KEY
ARG VITE_INDEXED_DB_NAME
ARG VITE_AUTH_DOMAIN
ARG VITE_PROJECT_ID
ARG VITE_STORAGE_BUCKET
ARG VITE_MESSAGING_SENDER_ID
ARG VITE_APP_ID
ARG VITE_MEAUSUREMENT_ID

ENV VITE_SERVER_URL=$VITE_SERVER_URL
ENV VITE_INDEXED_DB_VERSION=$VITE_INDEXED_DB_VERSION
ENV VITE_API_KEY=$VITE_API_KEY
ENV VITE_INDEXED_DB_NAME=$VITE_INDEXED_DB_NAME
ENV VITE_AUTH_DOMAIN=$VITE_AUTH_DOMAIN
ENV VITE_PROJECT_ID=$VITE_PROJECT_ID
ENV VITE_STORAGE_BUCKET=$VITE_STORAGE_BUCKET
ENV VITE_MESSAGING_SENDER_ID=$VITE_MESSAGING_SENDER_ID
ENV VITE_APP_ID=$VITE_APP_ID
ENV VITE_MEAUSUREMENT_ID=$VITE_MEAUSUREMENT_ID

RUN npm run build